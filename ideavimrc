let mapleader = ","
set ignorecase
set smartcase
set hlsearch
set showmode
set undolevels=100
set scrolloff=3
set history=500
set visualbell
set noerrorbells
set colorcolumn=100

"set easymotion
set surround
set multiple-cursors
set commentary
set ideajoin
set clipboard=unnamedplus

noremap <leader>y "*y
noremap <leader>Y "*Y
noremap <leader>p "*p
noremap <leader>P "*P

noremap <space><cr> :nohlsearch<cr>

noremap / :action Find<cr>
noremap g/ /

noremap <space>rr :action RenameElement<cr>

nmap <leader>h <c-w>h
nmap <leader>l <c-w>l
nmap <leader>k <c-w>k
nmap <leader>j <c-w>j

nmap zj o<Esc>k
nmap zk O<Esc>j

nmap <leader>ws :action SplitHorizontally<cr>
nmap <leader>wv :action SplitVertically<cr>
nmap <leader>wc :action Unsplit<cr>

nmap <leader>x :action GotoNextError<cr>
nmap <leader>X :action GotoPreviousError<cr>
nmap <leader>i :action GotoImplementation<cr>
nmap <leader>u :action FindUsages<cr>
nmap <leader>c :action GotoClass<cr>
nmap <leader>f :action GotoFile<cr>
nmap <leader>h :action Back<cr>
nmap <leader>l :action Forward<cr>

nmap <leader>q :action CloseContent<cr>
nmap <leader>Q :action ReopenClosedTab<cr>
nnoremap [b :action PreviousTab<cr>
nnoremap ]b :action NextTab<cr>

nmap [e :action MoveLineUp<cr>
nmap ]e :action MoveLineDown<cr>
nmap [s :action MoveStatementUp<cr>
nmap ]s :action MoveStatementDown<cr>
